<div class="page-header">
  <h1>People</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <td><%= link_to "Sort By Eye Color", root_path(sort_by: 'eye_color') %></td>
      <td><%= link_to "Sort By First Name", root_path(sort_by: 'first_name') %></td>
      <td><%= link_to "Sort By Last Name", root_path(sort_by: 'last_name') %></td>
      <td><%= link_to "Sort By Date of Birth", root_path(sort_by: 'date_of_birth') %></td>
      <td><%= link_to "Only Awesomeness", root_path(sort_by: 'awesome') %></td>
      <td><%= link_to "Remove Sort", root_path %></td>
    </tr>
  </thead>
</table>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Eye Color</th>
      <th>Date of Birth</th>
      <th>Height in Inches</th>
      <th>Awesome?</th>
      <th>Created At</th>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.id %></td>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.eye_color %></td>
        <td><%= person.date_of_birth %></td>
        <td><%= person.height_in_inches %></td>
        <td><%= person.awesome %></td>
        <td><%= person.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
